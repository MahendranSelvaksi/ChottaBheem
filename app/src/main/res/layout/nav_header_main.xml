<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginEnd="05dp"
    android:layout_marginLeft="05dp"
    android:layout_marginRight="05dp"
    android:layout_marginStart="05dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.unsullied.chottabheem.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:text="Mahendran"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:textAllCaps="true"
                android:textColor="@color/PrimaryText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:customFont="novabold.ttf" />

            <com.unsullied.chottabheem.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:text="9629040472"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:textColor="@color/SecondaryText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:customFont="nova.ttf" />

            <com.unsullied.chottabheem.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1.5dp"
                android:text="RA99-01"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:textColor="@color/SecondaryText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:customFont="nova.ttf" />
        </LinearLayout>

        <com.unsullied.chottabheem.utils.CustomTextView
            android:id="@+id/logoutTV"
            android:layout_gravity="top"
            android:layout_weight="4"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:padding="05dp"
            android:text="Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/white"
            app:customFont="novalight.ttf"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1.5dp"
        android:background="@color/DividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.unsullied.chottabheem.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1.5dp"
                android:layout_weight="1"
                android:text="Referral Progress"
                android:textColor="@color/PrimaryText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:customFont="novabold.ttf" />

            <com.unsullied.chottabheem.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1.5dp"
                android:layout_weight="2"
                android:gravity="right"
                android:text="9 / 15"
                android:textColor="@color/PrimaryText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:customFont="novabold.ttf" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbId"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:max="15"
            android:progress="9"
            />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1.5dp"
        android:background="@color/DividerColor" />

</LinearLayout>
