<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="0dp"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="5dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_fsugesstion_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="05dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="@color/suggesstion_bg_color"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="5dp">

                        <com.unsullied.chottabheem.utils.CustomEditText
                            android:id="@+id/reg_username_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Name"
                            android:imeOptions="actionNext"
                            android:inputType="text|textNoSuggestions|textPersonName|textCapSentences"
                            android:maxLines="1"
                            android:padding="05dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/PrimaryText"
                            android:textColorHint="@color/SecondaryText"
                            app:customFont="novalight.ttf"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="5dp">

                        <com.unsullied.chottabheem.utils.CustomEditText
                            android:id="@+id/reg_email_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Email ID"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="05dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/PrimaryText"
                            android:textColorHint="@color/SecondaryText"
                            app:customFont="novalight.ttf"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <com.unsullied.chottabheem.utils.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Phone number"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:padding="05dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/PrimaryText"
                            android:textColorHint="@color/SecondaryText"
                            app:customFont="novalight.ttf" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <com.unsullied.chottabheem.utils.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:cursorVisible="true"
                            android:gravity="top"
                            android:hint="Comments"
                            android:imeOptions="actionDone"
                            android:lines="3"
                            android:maxLines="5"
                            android:padding="05dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/PrimaryText"
                            android:textColorHint="@color/SecondaryText"
                            app:customFont="novalight.ttf" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/reg_submit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/custom_button"
                        android:gravity="center"
                        android:text="Send"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/tabTextColor" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
