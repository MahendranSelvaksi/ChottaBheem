<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/app_primary_text_disabled_material_light"
                android:centerY="0.50"
                android:endColor="@color/app_primary_text_disabled_material_light"
                android:startColor="@color/app_primary_text_disabled_material_light" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:angle="90"
                    android:endColor="@color/colorPrimary"
                    android:startColor="@color/black_overlay" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:angle="90"
                    android:endColor="@color/colorPrimaryDark"
                    android:startColor="@color/colorPrimaryDark" />
            </shape>
        </clip>
    </item>
</layer-list>